    "version": "0.2.0",
    "configurations": [
        {
            "name": "mainnet-debug",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/Nerva.Toolkit.Frontend.exe",
            "cwd": "${workspaceRoot}/Bin/Debug",
            "preLaunchTask": "build-debug",
            "args":[
                "--log-file", "../debug.log",
                "--config-file", "../debug.mainnet.config"
            ]
        },
        {
            "name": "testnet-debug",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/Nerva.Toolkit.Frontend.exe",
            "cwd": "${workspaceRoot}/Bin/Debug",
            "preLaunchTask": "build-debug",
            "args":[
                "--log-file", "../debug.log",
                "--config-file", "../debug.testnet.config"
            ]
        },
        {
            "name": "mainnet-release",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Release/Nerva.Toolkit.Frontend.exe",
            "cwd": "${workspaceRoot}/Bin/Release",
            "preLaunchTask": "build-release",
            "args":[
                "--log-file", "../release.log",
                "--config-file", "../release.mainnet.config"
            ]
        },
        {
            "name": "Attach",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        }
    ]
}