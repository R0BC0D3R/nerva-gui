{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug-Linux",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/linux-x64/Nerva.Toolkit",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "linux-debug",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args":[
                "--log-file", "${workspaceRoot}/app.log",
                "--config-file", "${workspaceRoot}/app.config",
            ]
        },
        {
            "name": "Debug-Mac",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/osx-x64/Nerva.Toolkit.Mac.app/Contents/MacOS/Nerva.Toolkit",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "osx-debug",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args":[
                "--log-file", "${workspaceRoot}/app.log",
                "--config-file", "${workspaceRoot}/app.config",
            ]
        },
        {
            "name": "Debug-Windows",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Bin/Debug/win-x64/Nerva.Toolkit.exe",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args":[
                "--log-file", "${workspaceRoot}/app.log",
                "--config-file", "${workspaceRoot}/app.config",
            ]
        }
    ]
}

