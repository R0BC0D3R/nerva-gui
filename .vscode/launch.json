{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug-Linux",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Src/Bin/debug/net5.0/linux-x64/Nerva.Desktop",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "debug-linux",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args":[
                "--log-file", "${workspaceRoot}/app.log",
                "--config-file", "${workspaceRoot}/app.config",
            ]
        },
        {
            "name": "Debug-Osx",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Src/Bin/debug/net5.0/osx-x64/Nerva.Desktop.app/Contents/MacOS/Nerva.Desktop",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "debug-osx",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args":[
                "--log-file", "${workspaceRoot}/app.log",
                "--config-file", "${workspaceRoot}/app.config",
            ]
        },
        {
            "name": "Debug-Windows",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/Src/Bin/debug/net5.0-windows/win-x64/Nerva.Desktop.exe",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "debug-windows",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args":[
                "--log-file", "${workspaceRoot}/app.log",
                "--config-file", "${workspaceRoot}/app.config",
            ]
        }
    ]
}

