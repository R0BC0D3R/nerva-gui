{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "linux-debug",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build", "/p:GenerateFullPaths=true",
                "/p:Configuration=Debug", "/p:TrimUnusedDependencies=true",
                "/p:OutputPath=${workspaceRoot}/Bin/Debug/Linux",
                "${workspaceRoot}/Src/Nerva.Toolkit/Nerva.Toolkit.Linux.csproj"
            ],
            "group": "build",
            "presentation": { "reveal": "silent" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "windows-debug",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build", "/p:GenerateFullPaths=true",
                "/p:Configuration=Debug", "/p:TrimUnusedDependencies=true",
                "/p:OutputPath=${workspaceRoot}/Bin/Debug/Windows",
                "${workspaceRoot}\\Src\\Nerva.Toolkit\\Nerva.Toolkit.Windows.csproj"
            ],
            "group": "build",
            "presentation": { "reveal": "silent" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "windows-release",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build", "/p:GenerateFullPaths=true",
                "/p:Configuration=Release", "/p:TrimUnusedDependencies=true",
                "/p:OutputPath=${workspaceRoot}/Bin/Release/Windows",
                "${workspaceRoot}\\Src\\Nerva.Toolkit\\Nerva.Toolkit.Windows.csproj"
            ],
            "group": "build",
            "presentation": { "reveal": "silent" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "mac-debug",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build", "/p:GenerateFullPaths=true",
                "/p:Configuration=Debug", "/p:TrimUnusedDependencies=true",
                "/p:OutputPath=${workspaceRoot}/Bin/Debug/Mac",
                "${workspaceRoot}/Src/Nerva.Toolkit/Nerva.Toolkit.Mac.csproj"
            ],
            "group": "build",
            "presentation": { "reveal": "silent" },
            "problemMatcher": "$msCompile"
        },
    ]
}

